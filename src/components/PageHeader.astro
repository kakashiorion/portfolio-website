---
import nitin from '../assets/nitin.svg';

---
<div class="header">
  <a
    href="/">
    <img
    src={nitin.src}
    alt="Nitin Portfolio Header Logo"
    class="header-logo"
    />
  </a>  
    <div class="header-links">
      <a href="/#portfolio" class="black-text text-small">Portfolio</a>
      <a href="/#about" class="black-text text-small">About</a>
      <a href="/#contact" class="primary-text text-small">Contact</a>
    </div>
</div>

<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        align-self: stretch;
    }
    .header-logo{
        height: 32px;
        width: 64px;
    }
    .header-links{
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 24px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        font-family: 'Inter';
    }
    .text-small {
        font-size: 14px;
    }
    .primary-text {
        color: #9D50D7;
    }
    .primary-text:hover{
        color: #7C2ABB;
    }
    .black-text {
        color: black;
    }

  @media (min-width: 800px) {
    .header-logo {
      height: 40px;
      width: 80px;
    }
    .header-links {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 64px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      font-family: 'Inter';
    }
    .text-small{
        font-size: 18px;
    }
}
</style>
