---
import ProjectCard from "../cards/projectCard.astro";
import SectionHeader from "../SectionHeader.astro";
import projects from "../../projects";
---

<div id="portfolio">
  <SectionHeader
    title="Portfolio"
    subtitle="List of a few projects that I have built"
  />
  <div class="project-list">
    {projects.map((project)=>
       <ProjectCard title={project.name} subtitle={project.desc} appLogo={project.appLogoUrl} visitUrl={`/projects/${project.link}`} tools={project.tools}/>
    )}
  </div>
</div>

<style>
  #portfolio {
    display: flex;
    padding: 48px 24px;
    flex-direction: column;
    align-items: flex-start;
    gap: 48px;
    align-self: stretch;
    border-radius: 24px;
    /* border: 4px solid #E7C18E; */
    background: #FFF4E5;
  }
  .project-list {
    display: grid;
    gap: 24px;
    grid-template-columns: 1fr;
    align-self: stretch;
  }

  @media (min-width: 800px) {
    #portfolio {
      padding: 48px;
      gap: 64px;
      /* border: 4px solid #E7C18E; */
    }
    .project-list {
      grid-template-columns: 1fr 1fr;
      gap:32px;
    }
  }
</style>
