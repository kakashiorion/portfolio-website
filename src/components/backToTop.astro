---
import down from '../assets/down.svg'

---

<a href=`#header` id="back-to-top">
    <div class="scroll-up">
        <img src={down.src} alt="Scroll Top" class="up-icon" />
    </div>
    <p class="text">Scroll To Top</p>
</a>

<style>
    #back-to-top {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
    }
    .scroll-up {
      display: flex;
      width: 40px;
      height: 40px;
      justify-content: center;
      align-items: center;
      flex-shrink: 0;
      border-radius: 48px;
      background: #9D50D7;
    }
    .up-icon {
      height: 20px;
      width: 20px;
      transform: rotate(180deg);
    }
    .text{
        color: #505050;
        font-family: 'Inter';
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    @media (min-width:800px){
        #back-to-top {
            gap: 12px;
        }
        .scroll-up{
            width: 48px;
            height: 48px;
        }
        .up-icon{
            height: 24px;
            width: 24px;
        }
        .text{
            font-size: 18px;
        }
    }
</style>