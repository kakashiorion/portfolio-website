---
import expand from '../../assets/expand.svg'

interface Props {
  title: string;
  desc: string;
  index: number;
}

const { title, desc, index } = Astro.props;
---

<div id=`card${index}` class="service-card">
  <button id=`button${index}` class="service-headline">
    <p id=`title${index}` class="title">{title}</p>
    <img id=`icon${index}` src={expand.src} class="icon" />
  </button>
  <p id=`desc${index}` class="invisible">{desc}</p>
</div>

<style>
  .service-card {
    display: flex;
    padding: 0px;
    flex-direction: column;
    justify-content: ;
    align-items: flex-start;
    align-self: stretch;
  }
  .service-headline {
    display: flex;
    padding: 8px 0px;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .title {
    color: #000;
    font-family: 'Inter';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .icon {
    height: 24px;
    width: 24px;
  }
  .inverted {
    transform: rotate(180deg);
  }
  .invisible {
    display: none;
  }
  .desc {
    display: flex;
    color: #5a5a5a;
    font-family: 'Inter';
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    padding: 8px 0px;
  }

  @media (min-width: 800px) {
    .service-card {
      padding: 0px;
    }
    .service-headline {
      padding: 12px 0px;
    }
    .title {
      font-size: 18px;
    }
    .icon {
      height: 20px;
      width: 20px;
    }
    .desc {
      font-size: 16px;
      padding: 12px 0px;
    }
  }
</style>

<script define:vars={{index}}>
  let c = document.getElementById(`card${index}`)
  let d = document.getElementById(`desc${index}`)
  let i = document.getElementById(`icon${index}`)
  if(c && d && i) {c.addEventListener("click",function(){
    i.classList.toggle("inverted")
    if (d.classList.contains("invisible")){
      d.classList.remove("invisible")
      d.classList.add("desc")
    } else {
      d.classList.remove("desc")
      d.classList.add("invisible")
    }
  })}
</script>