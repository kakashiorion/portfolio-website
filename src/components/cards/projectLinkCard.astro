---
interface Props {
  name: string;
  logo: string;
  link?: string;
}
const { name, logo, link } = Astro.props;
---

<a class="card" href={link} target="_blank" rel="noopener noreferrer">
  <img src={logo} alt="Link logo icon" class="icon" />
  <p class="name">{name}</p>
</a>

<style>
  .card {
    display: flex;
    padding: 16px 32px;
    justify-content: center;
    align-items: center;
    gap: 16px;
    border-radius: 16px;
    background-color: #ffffff;
    border: 2px solid #000;
    box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.25);
  }
  .card:hover{
    background-color: #dddddd;
  }
  .name{
    color: #000;
    font-family: 'Inter';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .icon{
    width: 24px;
    height: 24px;
  }

  @media (min-width: 800px) {
    .card {
      padding: 32px 64px;
      gap: 24px;
    }
    .icon{
      width: 32px;
      height: 32px;
    }
    .name{
      font-size: 20px;
    }
  }
</style>
