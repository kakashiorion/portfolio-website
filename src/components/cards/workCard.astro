---
interface Props {
    company:string;
    logoUrl:string;
    title:string;
    subtitle:string;
}

const {company,logoUrl,subtitle,title} =Astro.props
---
<div class="card">
    <div class="info">
        <img src={logoUrl} class="icon"/>
        <p class="company">{company}</p>
    </div>
    <p class="title">{title}</p>
</div>

<style>
    .card{
        display: grid;
        padding: 16px;
        align-items: center;
        grid-template-columns: 1fr 3fr;
        align-self: stretch;
        gap: 16px;
        flex: 1 0 0;
        border-radius: 16px;
        background: #FFF;
    }
    .info{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }
    .icon{
        height: 24px;
        width: 24px;
    }
    .company{
        color: #687C36;
        font-family: 'Inter';
        font-size: 10px;
        font-style: normal;
        line-height: normal;
    }
    .title{
        color: #000;
        font-family: 'Inter';
        font-size: 16px;
        font-style: normal;
        line-height: 20px;
    }
    @media (min-width: 800px) {
        .card{
            padding: 24px;
            gap: 24px;
            grid-template-columns: 1fr 2fr;
        } 
        .info{
            gap: 12px;
        }
        .icon{
            height: 32px;
            width: 32px;
        }
        .company{
            font-size: 14px;
        }
        .title{
            font-size: 22px;
            line-height: 28px;
        }
    }
</style>