---
interface Props{
    logoUrl:string;
    visitUrl:string;
    title:string;
}
const{logoUrl,visitUrl, title} = Astro.props
---

<a href={visitUrl} class="link-card">
    <img src={logoUrl} class="icon"/>
    <p class="title">{title}</p>
</a>

<style>
    .link-card{
        display: flex;
        padding: 16px;
        justify-content: center;
        align-items: center;
        gap: 12px;
        flex: 1 0 0;
        border-radius: 16px;
        background: #B8DCE8;
        box-shadow: 0px 1px 1px 0px rgba(12, 55, 69, 0.25);
    }
    .link-card:hover{
        background-color: #7CBFDA;
    }
    .icon{
        height: 20px;
        width: 20px;
    }
    .title{
        color: #0A3341;
        font-family: 'Inter';
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    @media (min-width: 800px) {
        .link-card{
            padding: 24px;
            gap: 16px;
        }
        .icon{
            height: 24px;
            width: 24px;
        }
        .title{
            font-size: 18px;
        }
    }
</style>