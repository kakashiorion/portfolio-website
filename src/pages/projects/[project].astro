---
import PageHeader from "../../components/PageHeader.astro";
import ProjectLinkCard from "../../components/cards/projectLinkCard.astro";
import Footer from "../../components/footer.astro";
import BackToTop from "../../components/backToTop.astro";
import Layout from "../../layouts/Layout.astro";
import projects from "../../projects";
import type { ProjectType } from "../../projects";
import github from "../../assets/github.svg";
import right from "../../assets/down.svg";
import webDemo from "../../assets/webDemo.svg";
import appDemo from "../../assets/appDemo.svg";

export function getStaticPaths() {
  return projects.map((project: ProjectType) => {
    return {
      params: { project: project.link },
      props: { project },
    };
  });
}

interface Props {
  project: ProjectType;
}
const { project } = Astro.props;
const nextProject = projects.find(p=>project.index==projects.length-1?p.index==0: p.index==project.index+1);
---

<Layout title={`Project - ${project.name}`}>
  <main id={`main-${project.index}`}>
    <PageHeader />
    <div class="proj-desc">
      <div class="proj-logo">
        <img src={project.appLogoUrl} class="icon-large" />
      </div>
      <div class="proj-info">
        <p class="title">{project.name}</p>
        <p class="subtitle">{project.desc}</p>
      </div>
    </div>
    <div class="proj-video">
      <video class="video" controls autoplay muted>
        <source src={project.videoUrl} type="video/mp4"/>
        Your browser does not support the video tag.
      </video>
    </div>
    <div class="proj-section">
      <p class="proj-heading">Project links</p>
      <div class="links-list">
        <ProjectLinkCard logo={github.src} name={"Github"} link={project.githubUrl}/>
        <ProjectLinkCard logo={project.isMobile? appDemo.src: webDemo.src} name={project.isMobile? "Get APK":"Website"} link={project.isMobile? project.apkUrl:project.demoUrl}/>
      </div>
    </div>
    <div class="proj-section">
      <p class="proj-heading">Gallery</p>
      <div class="gallery-list"></div>
    </div>
    <div class="proj-section">
      <p class="proj-heading">Tools/Frameworks</p>
      <div class="tools-list">
        {project.tools.map((tool)=>{
          return <div class="tool-card">
            <img src={tool.logo} alt="Tool logo icon" class="icon-small" />
            <p class="tool-name">{tool.name}</p>
          </div>
        })}
        </div>
    </div>
    <a class="next-section" href={`/projects/${nextProject?.link}`}>
      <div class="next-info">
        <p class="tool-name">View next project</p>
        <p class="proj-heading">{nextProject?.name}</p>
      </div>
      <div class="next-button">
        <img src={right.src} class="next-icon"/>
      </div>
    </a>
    <Footer />
    <BackToTop />
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48px 24px;
    gap: 80px;
    background-color: white;
  }
  .proj-desc {
    display: flex;
    align-items: center;
    gap: 24px;
    align-self: stretch;
  }
  .proj-logo {
    display: flex;
    padding: 16px;
    align-items: center;
    justify-content: center;
    gap: 8px;
    border-radius: 16px;
    background: #000;
  }
  .icon-large {
    width: 64px;
    height: 64px;
  }
  .proj-info{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    flex: 1 0 0;
    align-self: stretch;
  }
  .title{
    color: #000;
    font-family: 'Inter';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .subtitle{
    color: #000;
    font-family: 'Inter';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .proj-video{
    display: flex;
    padding: 0px;
    align-items: flex-start;
    justify-content: center;
    gap: 10px;
    align-self: stretch;
  }
  .video{
    height: 100%;
    width: 100%;
  }
  .proj-heading{
    color: #000;
    font-family: 'Inter';
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .proj-section{
    display: flex;
    padding: 32px 0px;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    align-self: stretch;
  }
  .links-list{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    align-self: stretch;
  }
  .tools-list{
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    gap: 16px;
    align-self: stretch;
    flex-wrap: wrap;
  }
  .tool-card{
    display: flex;
    padding: 16px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 12px;
  }
  .tool-name{
    color: #808080;
    font-family: 'Inter';
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .icon-small{
    width: 32px;
    height: 32px;
  }
  .next-section{
    display: flex;
    padding: 32px;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    border-radius: 16px;
    border: 1px solid #9D50D7;
  }
  .next-section:hover{
    background-color: #f5eefc;
  }
  .next-info{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 12px;
  }
  .next-button{
    display: flex;
    width: 48px;
    height: 48px;
    justify-content: center;
    align-items: center;
    border-radius: 32px;
    background: #9D50D7;
  }
  .next-icon{
    height: 24px;
    width: 24px;
    transform: rotate(-90deg);
  }

  @media (min-width: 800px) {
    main {
      padding: 80px 48px;
      margin: auto;
      gap: 120px;
      max-width: 1280px;
    }
    .proj-desc {
      gap: 64px;
    }
    .proj-logo {
      padding: 24px;
      gap: 16px;
      border-radius: 32px;
    }
    .icon-large {
      width: 160px;
      height: 160px;
    }
    .proj-info{
      gap: 32px;
    }
    .title {
      font-size: 48px;
    }
    .subtitle {
      font-size: 32px;
    }
    .proj-video{
      padding: 0px 80px;
    }
    .video{

    }
    .proj-heading{
      font-size: 32px;
    }
    .proj-section{
      padding: 48px 0px;
      gap: 48px;
    }
    .links-list{
      gap: 32px;
    }
    .tools-list{
      gap: 32px;
    }
    .tool-card{
      padding: 24px;
      gap: 20px;
    }
    .tool-name{
      font-size: 20px;
    }
    .icon-small{
      width: 48px;
      height: 48px;
    }
    .next-section{
      padding: 48px 80px;
    }
    .next-info{
      gap:16px;
    }
    .next-button{
      width: 64px;
      height: 64px;
    }
    .next-icon{
      height: 32px;
      width: 32px;
    }
  }
</style>
